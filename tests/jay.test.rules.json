{
	"version": "0.1",
	"rexearch_version": "0.1.5",
	"description": "Jay Test rules",
	"rules":
		[
			{
				"id": "UnitNumberRule",
                "regex": "((-\\d+|\\d+)\\.?[\\d, 십백천만억조]+)(명|회|건|배|%)",
				"target_regex_group" : 0,
				"repr": "{custom_function['find_unit_number'](group(1))}",
				"tags": "{group(3)}"
            },
			{
				"id": "NumberRule1",
                "regex": "[\\s…‘“·~∼(),\\[\\]→#＃+:：=&<>$`*%!±-]((\\d+|\\d,\\d{3}(,\\d{3})+)[./]\\d+)([^.:/\\+])",
				"target_regex_group" : 0
            },
			{
				"id": "NumberRule2",
                "regex": "(?![,.])([-±]?\\d+[½-⅞]?)",
				"target_regex_group" : 0
			},
			{
				"id": "NumberRule3",
                "regex": "[\\-±]?((\\d,\\d{3}|\\d)+([.]\\d+)?[백천만억조]{1,2}[ ]?)+(\\d,\\d{3}|\\d+)?",
				"target_regex_group" : 0
			},
			{
				"id": "NumberRule4",
                "regex": "([\\-±]?((\\d,\\d{3}|\\d{1,4})([.]\\d+)?[백천만억조]{1,2}[ ]?)+(\\d,\\d{3}|\\d+)?)(일|원|명)",
				"target_regex_group" : 0
			},
			{
				"id": "HTMLEntityRule",
                "regex": "(&#?\\w{2,7};)",
				"target_regex_group" : 0,
				"repr": "{custom_function['html_entity_decoder'](group(0))}",
				"tags": "HTML_ENTITY"
			}
		]
}